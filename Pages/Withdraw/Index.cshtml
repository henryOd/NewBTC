@page
@model NewBTC.Pages.Withdraw.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].withdrawAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].WithdrawDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].AcctBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Withdraw[0].Wstatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Withdraw) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.withdrawAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithdrawDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcctBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wstatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

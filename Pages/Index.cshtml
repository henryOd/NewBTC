    function loadDepositList() {
        $.get("/deposit/list", function(data) {
            $("#depositList").html(data);
        });
    }
    function RegisterDepositNow() {
        $.ajax({
            type: "Get",
            url:"/Deposit/CreateDeposit",
            success: function(result) {
                $("#depositNow").html(result);
                $("#AddDeposit").modal('show');
            }
        })
    }

    function InvestNow() {
        $.ajax({
            type: "Get",
            url:"/Invest/CreateInvest",
            success: function(resultinvest) 
            {    
                $("#InvestoNow").html(resultinvest);
                $("#AddInvest").modal('show');
            }
        })
    }


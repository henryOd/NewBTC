        function openDepositModal(id) {
        $.get("/deposit/edit/" + id, function(data) {
            $("#depositModalBody").html(data);
            $("#depositModal").modal("show");
            $("#depositEdit").html(data);
        });
    }

    $(document).ready(function () {
